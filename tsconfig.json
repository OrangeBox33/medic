{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"strict": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
